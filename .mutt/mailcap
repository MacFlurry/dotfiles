# HTML
text/html; elinks -dump %s; copiousoutput
text/html; w3m -v -F -T text/html %s; copiousoutput; nametemplate=%s.html
text/html; lynx -dump %s; copiousoutput; nametemplate=%s.html
text/html; ~/.mutt/scripts/view_attachment.sh %s

# PS/PDF
document/pdf; ~/.mutt/scripts/view_attachment.sh %s pdf
application/pdf; ~/.mutt/scripts/view_attachment.sh %s pdf
application/postscript; ~/.mutt/scripts/view_attachment.sh %s pdf

# Multimedia
image/*; ~/.mutt/scripts/view_attachment.sh %s
video/*; ~/.mutt/scripts/view_attachment.sh %s

# Text
text/*; view -Mf '%s' ; edit=vim -f '%s'; compose=vim -f '%s'; needsterminal

# Unidentified
mime_lookup application/octet-stream
application/*; ~/.mutt/scripts/view_attachment %s
application/octet-stream; ~/.mutt/scripts/view_attachment %s
