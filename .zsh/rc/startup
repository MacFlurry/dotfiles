##
## Startup
##

# List tmux sessions.
if which tmux &> /dev/null; then
    tmux_sessions=$(tmux list-sessions)
    if (( ${#tmux_sessions} )) ; then
        printf "$fg[green]%d tmux sessions:\n" ${#${(f)tmux_sessions}}
        printf "$fg[cyan]%s$reset_color\n" $tmux_sessions
    fi
fi

