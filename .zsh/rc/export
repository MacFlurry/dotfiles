##
##  Environment
##

# Editor
if [[ -x $(whence -p vim) ]]; then
    export EDITOR="vim"
    export VISUAL="${EDITOR}"
    export VIMRELEASE="$(print ${${$(vim --version)[5]}:gs/.//})"
else
    if [[ -x $(whence -p vi) ]]; then
        export EDITOR="vi"
    fi
fi

# Pager
export PAGER="less -S"

# CVS
export CVS_RSH="ssh"
export CVSEDITOR="vim"

# rsync
export RSYNC_RSH="ssh"

# vim: ft=zsh
