# Profile Name
set my_profile="vallentin.net"

# Set the profile name in the status line.
set status_format="%_h:  [%r]  %f [total:%?M?%M/?%m%?n? new:%n?%?o? old:%o?%?d? del:%d?%?F? flag:%F?%?t? tag:%t?%?p? post:%p?%?b? inc:%b?%?l? %l?]       (%s/%S)%> [profile: $my_profile] [%P]   "

set hostname=local
set from=matthias@vallentin.net
set signature=~/.mutt/sigs/simple

# Next profile.
macro generic <F7> ':source ~/.mutt/profiles/icir<enter>'

