[general]
pythonfile=~/.offlineimap.py
metadata = ~/.offlineimap
accounts = GMail
maxsyncaccounts = 1

[Account GMail]
localrepository = Local
remoterepository = Remote
autorefresh = 5
quick = 10

[Repository Local]
type = Maildir
localfolders = ~/.gmail
sep = .
restoreatime = no

[Repository Remote]
type = IMAP
ssl = yes
remotehost = imap.gmail.com
remoteuser = matthias.vallentin@gmail.com
maxconnections = 1
realdelete = no
foldersort = prio_cmp
nametrans = lambda folder: re.sub('^bay area$', 'bay-area', re.sub('.*Spam$', 'spam', re.sub('.*Drafts$', 'drafts', re.sub('.*Sent Mail$', 'sent', re.sub('.*Starred$', 'flagged', re.sub('.*Trash$', 'trash', folder))))))
folderfilter = lambda folder: re.search(filter_pattern, folder)

